{ "extends": "@tsconfig/node20/tsconfig.json",
"compilerOptions": {
    "outDir": "./dist",                      
    "allowJs": true,
    "target": "ES2020",                       
    "module": "CommonJS",                      
    "rootDir": "./app/backend.project",                      
    "esModuleInterop": true,                 
    "strict": true,                           
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,   
    "moduleResolution": "node",                 
    "resolveJsonModule": true,                 
    "types": ["node"],                        
    "noImplicitAny": true                     
  },
  "include": ["./app/backend.project/**/*.ts", "./app/backend.project/**/*.js"],                          
  "exclude": ["node_modules", "dist"]           
}

